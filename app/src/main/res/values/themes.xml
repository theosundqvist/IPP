<resources>
    <!-- Base application theme. -->
    <style name="Theme.MatVinn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the background color -->
        <item name="android:background">@android:color/white</item>

        <!-- Customize the text color -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Customize the hint text color -->
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <!-- Customize the cursor color -->
        <item name="colorControlActivated">@android:color/black</item>

        <!-- Customize the search close icon color -->
        <item name="closeIconTint">@android:color/darker_gray</item>

    </style>

    <style name="Theme.MatVinn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MatVinn.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MatVinn.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>